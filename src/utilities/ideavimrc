let mapleader = ','
let g:mapleader = ','

nnoremap ; :
nnoremap k gk
nnoremap gk k
nnoremap j gj
nnoremap gj j
noremap J ^
noremap K $
" Quickly close the current window
nnoremap <leader>q :q<CR>
" Quickly save the current file
nnoremap <leader>w :w<CR>

inoremap jk <Esc>

map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l
map <space> /


